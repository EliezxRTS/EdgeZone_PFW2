<h1 class="text-center">{{title}}</h1>

<form action="/partidas/guardar" method="post">

  <div class="mb-3 mt-3">
    <label for="nombre_juego" class="form-label">Juego:</label>
    <input type="text" class="form-control" id="nombre_juego"
           placeholder="Nombre del juego"
           name="nombre_juego" required>
  </div>

  <!-- Nombre de campaña (opcional) -->
  <div class="mb-3">
    <label for="nombre_partida" class="form-label">Nombre de la partida:</label>
    <input type="text" class="form-control" id="nombre_partida"
           placeholder="Ej. Sesión 1, Campaña X (opcional)"
           name="nombre_partida">
  </div>

  <!-- Resultado -->
  <div class="mb-3">
    <label for="resultado" class="form-label">Resultado:</label>
    <input type="text" class="form-control" id="resultado"
           placeholder="Ganador, perdí, empate, etc."
           name="resultado">
  </div>

  <!-- Descripción (opcional) -->
  <div class="mb-3">
    <label for="descripcion" class="form-label">Descripción (opcional):</label>
    <textarea class="form-control" id="descripcion" placeholder="Agrega una descripción" name="descripcion" rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Guardar</button>
</form>
