<h1 class="text-center">{{title}}</h1>

<div class="container mt-4">

  {{#if mensaje}}
    <div class="alert alert-info text-center">{{mensaje}}</div>
  {{/if}}

  <!-- Formulario de actualización -->
  <form id="formEditarPartida" method="post" action="/partidas/editar/{{partida.id}}">
    
    <div class="mb-3">
      <label for="nombre_juego" class="form-label">Juego:</label>
      <input type="text" class="form-control" id="nombre_juego" name="nombre_juego" value="{{partida.nombre_juego}}" required>
    </div>

    <div class="mb-3">
      <label for="nombre_partida" class="form-label">Nombre de la partida (opcional):</label>
      <input type="text" class="form-control" id="nombre_partida" name="nombre_partida" value="{{partida.nombre_partida}}">
    </div>

    <div class="mb-3">
      <label for="resultado" class="form-label">Resultado (opcional):</label>
      <input type="text" class="form-control" id="resultado" name="resultado" value="{{partida.resultado}}">
    </div>

    <div class="mb-3">
      <label for="descripcion" class="form-label">Descripción (opcional):</label>
      <textarea class="form-control" id="descripcion" name="descripcion">{{partida.descripcion}}</textarea>
    </div>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmModal">
      Actualizar partida
    </button>
  </form>

  <!-- Formulario de eliminación -->
  <form action="/partidas/borrar/{{partida.id}}" method="post" class="mt-3">
    <button type="submit" class="btn btn-danger" onclick="return confirm('¿Deseas eliminar esta partida?')">
      Eliminar partida
    </button>
  </form>

</div>

<!-- Modal de confirmación para actualizar -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="confirmModalLabel">Confirmar actualización</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>

      <div class="modal-body">
        ¿Estás seguro de que deseas actualizar esta partida?
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" id="confirmUpdateBtn">Sí, actualizar</button>
      </div>

    </div>
  </div>
</div>

<script>
  document.getElementById('confirmUpdateBtn').addEventListener('click', function() {
    document.getElementById('formEditarPartida').submit();
  });
</script>
