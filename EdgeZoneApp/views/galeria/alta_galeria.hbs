<h1 class="text-center">{{title}}</h1>

<form action="/galeria/guardar" method="post">
  <!-- Nombre de la miniatura -->
  <div class="mb-3 mt-3">
    <label for="nombre" class="form-label">Nombre de la miniatura:</label>
    <input type="text" class="form-control" id="nombre" placeholder="Captura el nombre de la miniatura" name="nombre" required>
  </div>

  <!-- Colección (opcional) -->
  <div class="mb-3">
    <label for="coleccion" class="form-label">Colección (opcional):</label>
    <input type="text" class="form-control" id="coleccion" placeholder="Ingresa la colección" name="coleccion">
  </div>

  <!-- URL de la imagen -->
  <div class="mb-3">
    <label for="imagen_url" class="form-label">URL de la imagen:</label>
    <input type="text" class="form-control" id="imagen_url" placeholder="URL de la imagen de la miniatura" name="imagen_url">
  </div>

  <!-- Descripción (opcional) -->
  <div class="mb-3">
    <label for="descripcion" class="form-label">Descripción (opcional):</label>
    <textarea class="form-control" id="descripcion" placeholder="Agrega una descripción" name="descripcion" rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Guardar</button>
</form>
